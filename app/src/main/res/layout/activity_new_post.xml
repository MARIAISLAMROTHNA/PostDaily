<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".NewPostActivity">

    <include
        layout="@layout/app_bar_layout"
        android:id="@+id/new_post_toolbar"
        >
    </include>

    <ImageView
        android:id="@+id/new_post_image"
        android:layout_width="399dp"
        android:layout_height="250dp"
        android:layout_marginTop="32dp"
        android:maxHeight="20dp"
        android:scaleType="fitXY"

        android:src="@drawable/select_image"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_post_toolbar" />

    <EditText
        android:id="@+id/addDescriptionEt"
        android:layout_width="394dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/inputs"
        android:ems="10"
        android:hint="@string/post_des_hint"
        android:inputType="textMultiLine"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_post_image"
        app:layout_constraintVertical_bias="0.093" />

    <Button
        android:id="@+id/post_btn"
        android:layout_width="206dp"
        android:layout_height="54dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="140dp"
        android:background="@drawable/button"
        android:padding="16dp"
        android:text="@string/new_post_btn_hint"
        android:textColor="#F4F4F4"
        android:textColorHint="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.56"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addDescriptionEt"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/titlET"
        android:visibility="invisible"
        android:layout_width="124dp"
        android:layout_height="45dp"
        android:ems="10"
        android:hint="Add Title"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.053"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.104" />

</androidx.constraintlayout.widget.ConstraintLayout>