<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".FindFriendsActivity">

    <include
        layout="@layout/app_bar_layout"
        android:id="@+id/find_friends_toolbar"

        >
    </include>

    <RelativeLayout
        android:id="@+id/myLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/find_friends_toolbar"
        android:layout_marginTop="15dp"
        >

        <TextView
            android:id="@+id/simpleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="11dp"
            android:textAlignment="center"
            android:text="Search for friends"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/search_box_input"
            android:layout_width="273dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/simpleText"
            android:layout_alignParentStart="true"
            android:layout_marginStart="51dp"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/inputs"
            android:ems="10"
            android:hint="Search here..."
            android:inputType="textMultiLine|textCapWords"
            android:padding="10dp"
            android:textColorHint="@color/textColor" />

        <ImageButton
            android:id="@+id/search_people_button"
            android:layout_width="56dp"
            android:layout_height="38dp"
            android:layout_below="@+id/simpleText"
            android:layout_marginStart="9dp"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@+id/search_box_input"
            android:background="@drawable/inputs"
            android:scaleType="centerInside"
            android:src="@drawable/search" />
    </RelativeLayout>
<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/search_friend_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/myLayout"
    android:layout_marginTop="10dp">
</androidx.recyclerview.widget.RecyclerView>
</RelativeLayout>